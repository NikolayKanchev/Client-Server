<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="750.0" stylesheets="@VeryPretty.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerController">
   <children>
      <TextArea fx:id="textArea" disable="true" layoutX="11.0" layoutY="163.0" prefHeight="421.0" prefWidth="729.0" />
      <Label fx:id="welcomeLabel" layoutX="169.0" layoutY="14.0" text="CHAT SERVER" />
      <Label fx:id="portLabel" layoutX="206.0" layoutY="122.0" text="Choose port:" />
      <TextField fx:id="portTF" layoutX="317.0" layoutY="116.0" onMouseEntered="#setVisibleGreenLabel" prefHeight="31.0" prefWidth="129.0" />
      <Button fx:id="startButton" layoutX="472.0" layoutY="116.0" mnemonicParsing="false" onAction="#startServer" prefHeight="31.0" prefWidth="77.0" text="Start" />
      <Button fx:id="stopButton" layoutX="472.0" layoutY="116.0" mnemonicParsing="false" onAction="#stopServer" prefHeight="31.0" prefWidth="77.0" text="Stop" visible="false" />
      <Label fx:id="greenLabel" layoutX="199.0" layoutY="78.0" prefHeight="27.0" prefWidth="354.0" text="Waiting for clients" visible="false" />
   </children>
</AnchorPane>
